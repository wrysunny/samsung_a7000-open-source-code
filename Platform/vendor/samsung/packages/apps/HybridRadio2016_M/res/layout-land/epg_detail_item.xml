<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:gravity="center"    android:orientation="vertical" >    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@color/main_bg_color"        android:elevation="12dp"        android:orientation="horizontal" >        <ImageView            android:id="@+id/selected_image"            android:layout_width="@dimen/epg_detail_image_width"            android:layout_height="@dimen/epg_detail_image_height"            android:scaleType="fitXY" />        <LinearLayout            android:layout_width="@dimen/epg_detail_image_width"            android:layout_height="@dimen/epg_detail_image_height"            android:layout_marginLeft="@dimen/epg_detail_text_left_margin"            android:layout_marginRight="@dimen/epg_detail_text_right_margin"            android:layout_marginTop="@dimen/epg_detail_channel_top_margin"            android:orientation="vertical" >            <TextView                android:id="@+id/selected_channel_title"                android:layout_width="match_parent"                android:layout_height="@dimen/epg_detail_title_height"                android:textColor="@color/black"                android:textStyle="bold"                android:ellipsize="marquee"                android:textSize="@dimen/epg_detail_title_text_size" />            <TextView                android:id="@+id/selected_channel_frequency"                android:layout_width="match_parent"                android:layout_height="@dimen/epg_detail_freq_height"                android:textColor="@color/color4"                android:textSize="@dimen/epg_detail_body_text_size" />            <ScrollView                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_marginBottom="@dimen/epg_detail_text_bottom_margin"                android:layout_marginTop="@dimen/epg_detail_text_top_margin"                android:layout_weight="1" >                <TextView                    android:id="@+id/selected_channel_description"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:textColor="@color/color4"                    android:textSize="@dimen/epg_detail_body_text_size" />            </ScrollView>            <FrameLayout                android:id="@+id/epg_listen_frame"                android:layout_width="match_parent"                android:layout_height="@dimen/epg_bottom_btn_height"                android:layout_marginBottom="@dimen/epg_detail_listen_btn_bottom_margin"                android:visibility="gone" >                <LinearLayout                    android:id="@+id/listening_now"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="@drawable/epg_cardview_listening_bg"                    android:visibility="gone" >                    <TextView                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:layout_gravity="center_vertical"                        android:layout_marginLeft="@dimen/epg_detail_listening_text_side_margin"                        android:layout_weight="1"                        android:ellipsize="marquee"                        android:text="@string/now_listening"                        android:textColor="@color/epg_detail_blue_text"                        android:textSize="@dimen/epg_detail_listen_now_text_size" />                    <ImageView                        android:id="@+id/now_playing_ani"                        android:layout_width="@dimen/epg_detail_listening_ani_width"                        android:layout_height="@dimen/epg_detail_listening_ani_height"                        android:layout_gravity="center_vertical"                        android:contentDescription="@string/now_listening"                        android:src="@anim/now_playing" />                </LinearLayout>                <LinearLayout                    android:id="@+id/listen_button"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:gravity="end"                    android:visibility="gone" >                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:clickable="true"                        android:ellipsize="marquee"                        android:focusable="true"                        android:singleLine="true"                        android:text="@string/listen_to_radio"                        android:textColor="@color/color6"                        android:textSize="@dimen/epg_detail_listen_now_text_size" />                </LinearLayout>            </FrameLayout>        </LinearLayout>    </LinearLayout></LinearLayout>