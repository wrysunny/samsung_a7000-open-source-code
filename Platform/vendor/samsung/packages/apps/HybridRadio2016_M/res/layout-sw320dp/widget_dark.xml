    <LinearLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_controller_height"
        android:paddingStart="@dimen/widget_ic_arrow_left_marginleft"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layoutDirection="ltr">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_arrow_left"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="20dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="center"
                    android:src="@drawable/widget_arrow_btn_prev"
                    android:tint="@color/need_dark_bg"/>

                <LinearLayout
                    android:id="@+id/current_radio_info"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layoutDirection="ltr" >

                    <LinearLayout
                        android:id="@+id/layout_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/widget_txt_frequency_margintop">

                        <TextView
                            android:id="@+id/txt_frequency"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/widget_txt_freq_layout_height"
                            android:layout_marginEnd="@dimen/widget_txt_frequency_marginright"
                            android:singleLine="true"
                            android:textColor="@color/need_dark_bg"
                            android:shadowColor="#80000000"
                            android:shadowDy="1"
                            android:textSize="@dimen/widget_txt_frequency_textsize"
                            android:fontFamily="samsung-neo-num3T"/>

                        <LinearLayout
                            android:id="@+id/layout_fav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/widget_star"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="start"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/radio_favorite_btn_normal_dark"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/txt_mhz"
                                android:layout_width="28dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="6dp"
                                android:text="@string/mhz"
                                android:textColor="@color/need_dark_bg"
                                android:shadowColor="#80000000"
                                android:shadowDy="1"
                                android:textSize="@dimen/widget_txt_mhz_textsize"
                                android:fontFamily="sec-roboto-light"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
	            <ImageView
	                android:id="@+id/ic_arrow_right"
	                android:layout_width="34dp"
	                android:layout_height="34dp"
	                android:layout_marginTop="20dp"
	                android:background="?android:attr/selectableItemBackgroundBorderless"
	                android:clickable="true"
	                android:scaleType="center"
	                android:src="@drawable/widget_arrow_btn_next"
                        android:tint="@color/need_dark_bg"/>
            </LinearLayout>
