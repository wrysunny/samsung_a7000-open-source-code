<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_warning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/wifi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wifi_warning_msg_margin_left"
            android:layout_marginRight="@dimen/wifi_warning_msg_margin_right"
            android:layout_marginTop="@dimen/wifi_warning_msg_margin_top"
            android:textColor="@color/black_75"
            android:textSize="@dimen/wifi_warning_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wifi_warning_checkbox_margin_bottom"
            android:layout_marginTop="@dimen/wifi_warning_checkbox_margin_top"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/wifi_warning_checkbox_margin_left"
                android:layout_marginRight="@dimen/wifi_warning_checkbox_margin_right"
                android:paddingLeft="@dimen/wifi_warning_checkbox_padding_left"
                android:text="@string/do_not_show_again"
                android:textColor="@color/black_75"
                android:textSize="@dimen/wifi_warning_text_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
