<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/stations_list_row_min_height"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/channel_select_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/stations_list_checkbox_margin_start"
        android:layout_marginEnd="@dimen/stations_list_checkbox_margin_end"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/stations_list_row_min_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/stations_list_row_min_height"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/stations_list_channel_freq_text_margin_start" >

            <TextView
                android:id="@+id/txtChanFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:ellipsize="marquee"
                android:fontFamily="roboto-regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/channel_frequency_text"
                android:textSize="@dimen/stations_txtChanFreq_text_size" />

            <TextView
                android:id="@+id/txtChanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="@dimen/stations_list_channel_name_margin_top"
                android:ellipsize="marquee"
                android:fontFamily="roboto-regular"
                android:includeFontPadding="true"
                android:singleLine="true"
                android:textColor="@color/channel_name_text"
                android:textSize="@dimen/stations_txtChanName_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imgFavIcon_layout"
            android:layout_width="@dimen/stations_imgFavIcon_layout_dimention"
            android:layout_height="@dimen/stations_imgFavIcon_layout_dimention"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginEnd="@dimen/stations_imgFavIcon_layout_margin_right" >

            <ImageView
                android:id="@+id/imgFavIcon"
                android:layout_width="@dimen/stations_imgFavIcon_dimention"
                android:layout_height="@dimen/stations_imgFavIcon_dimention"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/desc_add_favorite" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>