                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:editable="false"
                android:focusable="false"
                android:inputType="numberSigned"
                android:maxLength="6" />
