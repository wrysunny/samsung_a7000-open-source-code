<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/stations_list_row_min_height"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/channel_select_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/stations_list_checkbox_margin_start"
        android:layout_marginEnd="@dimen/stations_list_checkbox_margin_end"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/stations_list_channel_freq_text_margin_start"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtChanFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:ellipsize="marquee"
                android:fontFamily="roboto-regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/channel_frequency_text"
                android:textSize="@dimen/stations_txtChanFreq_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/stations_list_channel_name_margin_top"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtChanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginEnd="@dimen/stations_visicon_margin_left"
                    android:ellipsize="marquee"
                    android:includeFontPadding="true"
                    android:singleLine="true"
                    android:textColor="@color/channel_name_text"
                    android:textSize="@dimen/stations_txtChanName_text_size" />

                <ImageView
                    android:id="@+id/vis_icon"
                    android:layout_width="@dimen/stations_visicon_size"
                    android:layout_height="@dimen/stations_visicon_size"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hybrid_radio_info_icon" />
            </LinearLayout>
        </LinearLayout>

        <!--
         <ImageView
        android:id="@+id/imgSpkIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@anim/now_playing" />
        -->

        <TextView
            android:id="@+id/epgDetailIcon"
            android:layout_width="@dimen/stations_epgDetailIcon_widht"
            android:layout_height="@dimen/stations_epgDetailIcon_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/fmradio_list_ic_epg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/epg"
            android:textColor="@color/channel_frequency_text"
            android:textSize="@dimen/stations_epgDetailIcon_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/imgFavIcon_layout"
            android:layout_width="@dimen/stations_imgFavIcon_layout_dimention"
            android:layout_height="@dimen/stations_imgFavIcon_layout_dimention"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginEnd="@dimen/stations_imgFavIcon_layout_margin_right"
            android:background="?android:attr/selectableItemBackgroundBorderless" >

            <ImageView
                android:id="@+id/imgFavIcon"
                android:layout_width="@dimen/stations_imgFavIcon_dimention"
                android:layout_height="@dimen/stations_imgFavIcon_dimention"
                android:contentDescription="@string/desc_add_favorite"
                android:scaleType="fitCenter" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>