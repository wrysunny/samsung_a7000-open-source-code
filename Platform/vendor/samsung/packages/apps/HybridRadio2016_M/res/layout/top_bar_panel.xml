<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/power_btn"
        android:layout_width="@dimen/top_bar_power_btn_size"
        android:layout_height="@dimen/top_bar_power_btn_size"
        android:layout_alignParentStart="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc_power"
        android:layout_marginStart="@dimen/top_bar_power_btn_margin_start"
        android:focusable="true"
        android:visibility="visible"
        android:scaleType="fitCenter"
        android:src="@drawable/hybrid_radio_player_off" />

    <ImageButton
        android:id="@+id/record_btn"
        android:layout_width="@dimen/top_bar_record_btn_size"
        android:layout_height="@dimen/top_bar_record_btn_size"
        android:layout_toEndOf="@+id/power_btn"
        android:layout_marginStart="@dimen/top_bar_record_btn_margin_start"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc_record"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/hybrid_radio_rec"
        android:visibility="visible" />

    <!-- Recording panel -->

    <FrameLayout
        android:id="@+id/recording_control"
        android:layout_width="@dimen/top_bar_recording_controller_width"
        android:layout_height="@dimen/top_bar_recording_controller_height"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/power_btn"
        android:layout_marginStart="@dimen/top_bar_recording_controller_margin_start"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/recording_pause_resume_btn"
            android:layout_width="@dimen/top_bar_recording_controller_button_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/recording_controller_ripple_left"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/hybrid_radio_playerbox_rec" />

        <ImageButton
            android:id="@+id/recording_stop_btn"
            android:layout_width="@dimen/top_bar_recording_controller_button_width"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/recording_controller_ripple_center"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/hybrid_radio_playerbox_stop" />

        <ImageButton
            android:id="@+id/recording_cancel_btn"
            android:layout_width="@dimen/top_bar_recording_controller_button_width"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/recording_controller_ripple_right"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/hybrid_radio_playerbox_close" />
    </FrameLayout>
    <!-- Recording panel end -->
</RelativeLayout>