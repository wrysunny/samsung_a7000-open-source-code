<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:touchwiz="http://schemas.android.com/apk/res/touchwiz"
    android:id="@+id/voice_clip_list_base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- record list view -->

        <ListView
            android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:dividerHeight="@dimen/station_favorite_divider_height"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/voice_list_clip_panel_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_player_controller_height" >

            <!-- Player -->

            <RelativeLayout
                android:id="@+id/fm_listplayer_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_player_controller_height"
                android:background="@color/recodings_controller_bg"
                android:visibility="gone" >

                <!-- title, volume, progress bar, time in player -->

                <RelativeLayout
                    android:id="@+id/player_panel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_player_panel_height"
                    android:visibility="gone" >

                    <!-- title -->

                   <!--  <TextView
                        android:id="@+id/PlayerTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="13dp"
                        android:layout_toLeftOf="@+id/VolIcon"
                        android:ellipsize="marquee"
                        android:shadowColor="@android:color/black"
                        android:shadowDy="2"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textSize="22dp" />

                     volume icon 

                    <ImageButton
                        android:id="@id/VolIcon"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="4dp"
                        android:contentDescription="@string/desc_volume"
                        android:focusable="true"
                        android:background="@color/twtransparent"
                        android:nextFocusUp="@+id/vSeekbar"/> -->

                    <!-- player & trim seekbar -->

                    <RelativeLayout
                        android:id="@+id/progress_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <SeekBar
                            android:id="@+id/progressbar"
                            style="@style/player_seekbar"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/list_player_progrssbar_margin_top"
                            android:focusable="true"/>
                    </RelativeLayout>

                    <!-- Current Played Time -->

                    <TextView
                        android:id="@+id/PlayerPlayTimeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_player_PlayerPlayTimeTextView_height"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/progress_group"
                        android:layout_marginTop="@dimen/list_player_PlayerPlayTimeTextView_margine_top"
                        android:layout_marginBottom="@dimen/list_player_PlayerPlayTimeTextView_margin_bottom"
                        android:paddingStart="@dimen/list_player_PlayerPlayTimeTextView_margin_start"
                        android:shadowColor="@android:color/black"
                        android:shadowDy="2"
                        android:textColor="@color/player_play_time_color"
                        android:textSize="12dp" />

                    <!-- Full Time -->

                    <TextView
                        android:id="@+id/PlayerFullTimeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_player_PlayerPlayTimeTextView_height"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/progress_group"
                        android:layout_marginTop="@dimen/list_player_PlayerPlayTimeTextView_margine_top"
                        android:layout_marginBottom="@dimen/list_player_PlayerPlayTimeTextView_margin_bottom"
                        android:gravity="right"
                        android:paddingRight="@dimen/list_player_PlayerPlayTimeTextView_margin_end"
                        android:shadowDy="2"
                        android:textColor="@color/player_full_time_color"
                        android:textSize="12dp" />
                </RelativeLayout>

                <!-- Player State Control Buttons -->

                <LinearLayout
                    android:id="@+id/idle_playerController"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_player_controller_button_layout_height"
                    android:layout_below="@id/player_panel"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/list_player_controller_button_layout_padding_bottom"
                    android:paddingLeft="@dimen/list_player_controller_button_padding_left"
                    android:paddingRight="@dimen/list_player_controller_button_padding_right" >

                    <RelativeLayout
                        android:id="@+id/relative_play_pause_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageButton
                            android:id="@+id/play_pause_btn"
                            android:layout_width="@dimen/list_player_controller_play_pause_btn_height"
                            android:layout_height="@dimen/list_player_controller_play_pause_btn_width"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:contentDescription="@string/tts_play_button"
                            android:focusable="true"
                            android:layout_marginLeft="@dimen/list_player_controller_play_pause_btn_margin_left"
                            android:layout_marginRight="@dimen/list_player_controller_play_pause_btn_margin_right"
                            android:src="@drawable/listplayer_control_play_btn"
                            android:visibility="visible" />

                        <ImageButton
                            android:id="@+id/prev_btn"
                            android:layout_width="@dimen/list_player_controller_prev_next_btn_height"
                            android:layout_height="@dimen/list_player_controller_prev_next_btn_width"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/play_pause_btn"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="@string/tts_previous_button"
                            android:focusable="true"
                            android:src="@drawable/listplayer_control_prev_btn"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/next_btn"
                            android:layout_width="@dimen/list_player_controller_prev_next_btn_height"
                            android:layout_height="@dimen/list_player_controller_prev_next_btn_width"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/play_pause_btn"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:contentDescription="@string/tts_Next_button"
                            android:focusable="true"
                            android:src="@drawable/listplayer_control_ff_btn"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>