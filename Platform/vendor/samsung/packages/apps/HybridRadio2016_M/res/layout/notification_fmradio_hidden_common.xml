<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hidden_quick_panel_icon"
        android:layout_width="@dimen/content_hidden_icon_size"
        android:layout_height="@dimen/content_hidden_icon_size"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/content_hidden_icon_margin"
        android:layout_gravity="center"
        android:focusable="true"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/content_hidden_title_height"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="@dimen/content_hidden_title_size"
            android:textColor="@color/quick_panel_title_color"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/content_hidden_text_height"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/content_hidden"
            android:textSize="@dimen/content_hidden_text_size"
            android:textColor="@color/quick_panel_text_color"/>
    </LinearLayout>
</LinearLayout>