                        android:layout_marginEnd="@dimen/widget_txt_freq_divider_marginright"
                        android:textSize="@dimen/widget_txt_freq_name_textsize"
                        android:text="@string/widget_text_frequency_divider"
                        android:shadowColor="#80000000"
                        android:shadowDy="1"
                        android:textColor="@color/widget_text_freq_normal"
                        android:fontFamily="sec-roboto-light"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_freq_rt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/widget_text_freq_normal"
                        android:shadowColor="#80000000"
                        android:shadowDy="1"
                        android:fontFamily="sec-roboto-light"
                        android:textSize="@dimen/widget_txt_freq_rt_textsize" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:orientation="horizontal">
            <FrameLayout
